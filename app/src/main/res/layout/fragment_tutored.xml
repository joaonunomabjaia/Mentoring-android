<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="mz.org.csaude.mentoring.viewmodel.tutored.TutoredVM" />
        <import type="mz.org.csaude.mentoring.util.Utilities"/>
        <import type="android.view.View"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:padding="@dimen/dimen_10dp"
            android:paddingBottom="80dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Empty-state card (visible when there are NO results) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/emptyCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_marginBottom="@dimen/dimen_10dp"
                app:cardUseCompatPadding="false"
                app:cardPreventCornerOverlap="true"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp"
                app:strokeColor="@android:color/transparent"
                android:visibility="@{Utilities.listHasElements(viewModel.searchResults) ? View.GONE : View.VISIBLE}">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/no_records_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/no_records_available"
                        android:textColor="@color/colorPrimaryDark"
                        android:fontFamily="@font/roboto_medium"
                        android:textSize="15sp"
                        android:gravity="center"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Results card (visible when there ARE results) -->
            <!-- Results card (edge-to-edge content, no margins/padding) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/rcvCard"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:visibility="@{Utilities.listHasElements(viewModel.searchResults) ? View.VISIBLE : View.GONE}"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:cardUseCompatPadding="false"
                app:strokeWidth="0dp"
                app:strokeColor="@android:color/transparent"
                app:cardPreventCornerOverlap="false">   <!-- important: no inner padding -->

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcv_tutoreds"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="none"
                    android:overScrollMode="never"
                    android:layoutAnimation="@anim/layout_pop_in_bottom" />
                <!-- no extra space -->
            </com.google.android.material.card.MaterialCardView>


        </LinearLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/submit"
            android:onClick='@{()->viewModel.createNewTutored()}'
            android:src='@drawable/baseline_add_24'
            app:backgroundTint="?attr/colorPrimary"
            app:tint="?attr/colorOnPrimaryContainer"
            app:rippleColor="?attr/colorPrimary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="16dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
