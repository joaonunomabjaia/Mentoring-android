<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="mz.org.csaude.mentoring.viewmodel.login.LoginVM" />
        <import type="android.view.View"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_gradient"
        android:padding="@dimen/dimen_16dp">

        <!-- HEADER -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/headerCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:padding="@dimen/dimen_16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Circular white badge with logo -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/logoCard"
                android:layout_width="94dp"
                android:layout_height="94dp"
                app:cardBackgroundColor="@android:color/white"
                app:strokeColor="@color/button_dark_back"
                app:strokeWidth="1dp"
                app:cardCornerRadius="999dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="1dp"
                    android:contentDescription="@string/app_name"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/mentoring"/>
            </com.google.android.material.card.MaterialCardView>

            <!-- Title under the logo -->
            <TextView
                android:id="@+id/titlePrimary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:text="@string/app_name"
                android:textStyle="bold"
                android:textSize="24sp"
                android:textColor="@color/button_dark_back"
                android:letterSpacing="0.15"
                android:textAlignment="center"
                app:layout_constraintTop_toBottomOf="@id/logoCard"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- Subtitle under the title -->
            <TextView
                android:id="@+id/titleSecondary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/app_name_checkPoint"
                android:textSize="16sp"
                android:textColor="@color/button_dark_back"
                android:textAlignment="center"
                app:layout_constraintTop_toBottomOf="@id/titlePrimary"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Form -->
        <LinearLayout
            android:id="@+id/formContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dimen_8dp"
            app:layout_constraintTop_toBottomOf="@id/headerCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/footer"
            android:layout_marginTop="10dp">

            <!-- Username -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:startIconDrawable="@drawable/ic_person"
                app:startIconTint="@color/colorPrimaryDark"
                android:enabled="@{!viewModel.authenticating}"
                app:hintTextColor="@color/button_dark_back"
                android:textColorHint="@color/button_dark_back"
                android:hint="@string/username">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inUserName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_border"
                    android:inputType="textEmailAddress|textNoSuggestions"
                    android:singleLine="true"
                    android:textColor="@color/button_dark_back"
                    android:text="@={viewModel.userName}"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Spacing -->
            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_12dp"/>

            <!-- Password -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:startIconDrawable="@drawable/ic_lock"
                app:startIconTint="@color/colorPrimaryDark"
                app:endIconMode="password_toggle"
                app:endIconTint="@color/colorPrimaryDark"
                android:enabled="@{!viewModel.authenticating}"
                app:hintTextColor="@color/button_dark_back"
                android:textColorHint="@color/button_dark_back"
                android:hint="@string/password">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:background="@drawable/edit_text_border"
                    android:singleLine="true"
                    android:textColor="@color/button_dark_back"
                    android:text="@={viewModel.userPassword}"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Remember me + (opcional) Esqueci a senha -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                style="@style/login_text_style"
                android:layout_marginTop="@dimen/dimen_8dp">

                <CheckBox
                    android:id="@+id/cbx_remember_me"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="@{viewModel.remeberMe}"
                    android:onClick="@{() -> viewModel.changeRemeberMeStatus()}"
                    android:text="@string/remember_me"
                    android:textColor="@color/button_dark_back"
                    android:enabled="@{!viewModel.authenticating}"/>

            </LinearLayout>

            <!-- Botão Login -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLogin"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:paddingVertical="@dimen/dimen_12dp"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:text="@string/login"
                app:iconGravity="textStart"
                android:enabled="@{!viewModel.authenticating}"
                android:onClick="@{()-> viewModel.doLogin()}"/>

            <!-- Progresso de autenticação -->
            <LinearLayout
                android:id="@+id/login_progress_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/dimen_12dp"
                android:visibility="@{viewModel.authenticating ? View.VISIBLE : View.GONE}">

                <ProgressBar
                    style="?android:attr/progressBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/authenticating"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_8dp"
                    android:layout_weight="1"
                    android:text="@{viewModel.authMesg}"
                    android:textColor="@color/button_dark_back"
                    android:textSize="15sp"/>
            </LinearLayout>

            <!-- Biometria -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_marginTop="@dimen/dimen_24dp"
                android:visibility="@{viewModel.biometricEnabled ? View.VISIBLE : View.GONE}">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_biometric_login"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:icon="@drawable/ic_fingerprint"
                    app:iconSize="24dp"
                    app:iconPadding="8dp"
                    android:text="@string/login_with_fingerprint"
                    android:textAllCaps="false"
                    android:onClick="@{()-> viewModel.showBiometricPrompt()}"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Footer -->
        <LinearLayout
            android:id="@+id/footer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dimen_12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:gravity="center"
                style="@style/login_text_style"
                android:text="@{viewModel.appName}"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                style="@style/login_text_style"
                android:text="@{viewModel.appVersionName}"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
