<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Tema base M3 -->
    <style name="Theme.Mentoring" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Paleta principal -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/purple_200</item>

        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorSecondaryContainer">@color/teal_700</item>

        <!-- Toolbar própria -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Texto padrão das labels -->
        <item name="android:textColorPrimary">@color/input_labels</item>

        <!-- Status bar (em M3 usa-se colorPrimary, não há Variant) -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>

        <!-- AppCompat SearchView continua válido -->
        <item name="searchViewStyle">@style/Widget.Mentor.SearchView</item>
    </style>

    <!-- Overlays de app bar / popup (mantidos) -->
    <style name="Theme.Mentoring.AppBarOverlay" parent="ThemeOverlay.Material3.ActionBar" />
    <style name="Theme.Mentoring.PopupOverlay" parent="ThemeOverlay.Material3.MaterialAlertDialog" />

    <!-- ======== TEXTOS / LEGADOS ÚTEIS ======== -->
    <style name="input_labels">
        <item name="android:textColor">@color/input_labels</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">@dimen/dimen_12dp</item>
        <item name="android:padding">@dimen/dimen_4dp</item>
        <item name="android:layout_marginBottom">@dimen/dimen_6dp</item>
    </style>

    <style name="login_text_style">
        <item name="android:textColor">@color/input_labels</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">@dimen/dimen_12dp</item>
        <item name="android:layout_marginBottom">@dimen/dimen_5dp</item>
    </style>

    <style name="login_app_name_style">
        <item name="android:textColor">@color/white</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">@dimen/dimen_30dp</item>
    </style>

    <style name="splash_app_name_style">
        <item name="android:textColor">#0288d1</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">@dimen/dimen_30dp</item>
    </style>

    <!-- (ainda podes usar estes dois em telas antigas) -->
    <style name="bottom_border_edit_text_style">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/bottom_border_edit_text_border</item>
        <item name="android:paddingLeft">@dimen/dimen_15dp</item>
        <item name="android:paddingRight">@dimen/dimen_15dp</item>
        <item name="android:paddingTop">@dimen/dimen_6dp</item>
        <item name="android:paddingBottom">@dimen/dimen_6dp</item>
        <item name="android:layout_marginBottom">@dimen/dimen_2dp</item>
    </style>

    <!-- ======== SPINNERS (legado) ======== -->
    <style name="bottom_spinner_style" parent="android:Widget.Spinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/spinner_normal</item>
        <item name="android:paddingTop">@dimen/dimen_5dp</item>
        <item name="android:paddingBottom">@dimen/dimen_5dp</item>
        <item name="android:paddingLeft">@dimen/dimen_8dp</item>
        <item name="android:paddingRight">@dimen/dimen_50dp</item>
        <item name="android:popupBackground">@color/spinner_back_color</item>
        <item name="android:layout_marginBottom">@dimen/dimen_5dp</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="login_spinner_style" parent="android:Widget.Spinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/login_spinner_back</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:popupBackground">@color/white</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="spinner_style" parent="android:Widget.Spinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/login_spinner_back</item>
        <item name="android:paddingTop">@dimen/dimen_5dp</item>
        <item name="android:paddingBottom">@dimen/dimen_5dp</item>
        <item name="android:paddingLeft">@dimen/dimen_8dp</item>
        <item name="android:paddingRight">@dimen/dimen_50dp</item>
        <item name="android:popupBackground">@color/white</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="spinner_label">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:typeface">sans</item>
        <item name="background">@color/white</item>
    </style>

    <!-- ======== LISTAS ======== -->
    <style name="listble_header">
        <item name="android:textColor">@color/white</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">@dimen/dimen_12dp</item>
        <item name="android:padding">@dimen/dimen_4dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center_vertical|center</item>
    </style>

    <style name="listble_content">
        <item name="android:textColor">@color/black</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">@dimen/dimen_12dp</item>
        <item name="android:padding">@dimen/dimen_4dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center_vertical|left</item>
    </style>

    <!-- ======== M3 COMPONENTES DO MOCK ======== -->
    <!-- TextInput denso com hint visível -->
    <style name="Mentor.M3.TextInput" parent="Widget.Material3.TextInputLayout.FilledBox.Dense">
        <item name="hintTextColor">@color/input_labels</item>
        <item name="boxBackgroundColor">@android:color/white</item>
        <item name="boxStrokeColor">@color/purple_500</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="startIconTint">@color/purple_500</item>
        <item name="endIconTint">@color/purple_500</item>
    </style>

    <!-- Exposed dropdown -->
    <style name="Mentor.M3.TextInput.Dropdown"
        parent="Widget.Material3.TextInputLayout.FilledBox.Dense.ExposedDropdownMenu">
        <item name="hintTextColor">@color/input_labels</item>
        <item name="boxBackgroundColor">@android:color/white</item>
    </style>

    <!-- Outlined text field -->
    <style name="Mentor.M3.TextInput.Outlined" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <!-- optional polish -->
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxBackgroundColor">@android:color/white</item>
        <!-- keeps hint visible on light backgrounds -->
        <item name="hintTextColor">?attr/colorOnSurfaceVariant</item>
    </style>

    <!-- Outlined dropdown (Exposed Dropdown Menu) -->
    <style name="Mentor.M3.TextInput.Dropdown.Outlined" parent="Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxBackgroundColor">@android:color/white</item>
        <item name="hintTextColor">?attr/colorOnSurfaceVariant</item>
    </style>

    <!-- Card preenchido -->
    <style name="Mentor.M3.Card" parent="Widget.Material3.CardView.Filled">
        <item name="cardCornerRadius">16dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="strokeColor">@color/card_back</item>
    </style>

    <!-- Botão "filled" M3: usa base genérica para evitar variações de nome -->
    <style name="Mentor.M3.Button" parent="Widget.Material3.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Tabs do teu projeto já estavam em M3 -->
    <style name="Widget.Mentor.TabLayout" parent="Widget.Material3.TabLayout">
        <item name="tabMode">fixed</item>
        <item name="tabInlineLabel">true</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabIndicatorAnimationMode">elastic</item>
        <item name="tabIndicatorColor">?attr/colorPrimary</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabTextAppearance">@style/TextAppearance.Mentor.Tab</item>
        <item name="tabTextColor">@color/tab_text_selector</item>
        <item name="tabSelectedTextColor">?attr/colorPrimary</item>
        <item name="tabRippleColor">@color/tab_ripple</item>
        <item name="tabPaddingStart">16dp</item>
        <item name="tabPaddingEnd">16dp</item>
    </style>

    <style name="TextAppearance.Mentor.Tab" parent="TextAppearance.Material3.TitleSmall">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Widget.Mentor.TabLayout.Pills" parent="Widget.Material3.TabLayout">
        <item name="tabMode">fixed</item>
        <item name="tabInlineLabel">true</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabBackground">@drawable/tab_bg_selector</item>
        <item name="tabTextAppearance">@style/TextAppearance.Mentor.Tab</item>
        <item name="tabTextColor">@color/tab_text_selector_pill</item>
        <item name="tabRippleColor">@color/tab_ripple</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
    </style>

    <!-- SearchView (AppCompat) -->
    <style name="Widget.Mentor.SearchView" parent="Widget.AppCompat.SearchView">
        <item name="queryBackground">@drawable/bg_search_plate</item>
        <item name="submitBackground">@drawable/bg_search_plate</item>
        <item name="searchIcon">@drawable/ic_search_24</item>
        <item name="closeIcon">@drawable/ic_close_24</item>
        <item name="voiceIcon">@drawable/ic_mic_24</item>
        <item name="goIcon">@drawable/ic_north_east_24</item>
        <item name="commitIcon">@drawable/ic_send_24</item>
    </style>

    <!-- Overlay para Material3 AlertDialog -->
    <style name="CustomAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <!-- arredondamento -->
        <item name="shapeAppearanceCornerExtraSmall">@style/ShapeAppearance.CustomDialog</item>

        <!-- (opcional) estilos de título e corpo -->
        <item name="materialAlertDialogTitleTextStyle">@style/CustomDialogTitleText</item>
        <item name="materialAlertDialogBodyTextStyle">@style/CustomDialogBodyText</item>
    </style>

    <style name="ShapeAppearance.CustomDialog" parent="ShapeAppearance.Material3.Corner.Medium">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="CustomDialogTitleText" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CustomDialogBodyText" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="ShapeAppearance_Nav_ActiveIndicator" parent="ShapeAppearance.Material3.Corner.None">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="Widget_Nav_ActiveIndicator">
        <!-- Background color for the selected pill -->
        <item name="android:color">@color/light_grey</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance_Nav_ActiveIndicator</item>
    </style>
    <!-- ========= Ronda Item: Text appearances ========= -->
    <style name="TextAppearance.M3.Ronda.Title" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>
    <style name="TextAppearance.M3.Ronda.Subtitle" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
    </style>
    <style name="TextAppearance.M3.Ronda.Body" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
    </style>

    <!-- ========= Ronda Item: Unelevated card ========= -->
    <style name="Widget.M3.RondaCard.Unelevated" parent="Widget.Material3.CardView.Outlined">
        <item name="cardUseCompatPadding">false</item>
        <item name="cardElevation">0dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">?attr/colorOutlineVariant</item>
        <!-- ✅ this was cardForegroundColor before -->
        <item name="cardBackgroundColor">?attr/colorSurface</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.M3.RondaCard</item>
    </style>

    <style name="ShapeAppearance.M3.RondaCard" parent="ShapeAppearance.Material3.Corner.None">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>

    <!-- ========= Divider ========= -->
    <style name="Widget.M3.Ronda.Divider" parent="Widget.Material3.MaterialDivider">
        <item name="dividerThickness">1dp</item>
        <item name="dividerColor">?attr/colorOutlineVariant</item>
    </style>

    <!-- ========= Status chip (assist tonal, unelevated) ========= -->
    <style name="Widget.M3.Ronda.StatusChip" parent="Widget.Material3.Chip.Assist">
        <item name="chipBackgroundColor">?attr/colorSecondaryContainer</item>
        <item name="chipStrokeColor">?attr/colorOutlineVariant</item>
        <item name="chipStrokeWidth">0.5dp</item>
        <item name="android:textColor">?attr/colorOnSecondaryContainer</item>
        <item name="rippleColor">?attr/colorSecondaryContainer</item>
    </style>

    <!-- ========= Icon-only buttons (roles + sizes) ========= -->
    <!-- Base: icon-only, no text -->
    <style name="Widget.M3.IconButton.Base" parent="Widget.Material3.Button.IconButton">
        <item name="android:minWidth">40dp</item>
        <item name="android:minHeight">40dp</item>
        <item name="iconPadding">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.M3.IconButton.Pill</item>
    </style>
    <style name="ShapeAppearance.M3.IconButton.Pill" parent="ShapeAppearance.Material3.Corner.None">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <!-- Size variants -->
    <style name="Widget.M3.IconButton.Small" parent="Widget.M3.IconButton.Base">
        <item name="android:minWidth">36dp</item>
        <item name="android:minHeight">36dp</item>
        <item name="iconSize">20dp</item>
    </style>
    <style name="Widget.M3.IconButton.Large" parent="Widget.M3.IconButton.Base">
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="iconSize">24dp</item>
    </style>

    <!-- Color roles -->
    <style name="Widget.M3.IconButton.Primary" parent="Widget.M3.IconButton.Base">
        <item name="backgroundTint">?attr/colorPrimaryContainer</item>
        <item name="iconTint">?attr/colorOnPrimaryContainer</item>
        <item name="rippleColor">?attr/colorPrimaryContainer</item>
    </style>
    <style name="Widget.M3.IconButton.Tonal" parent="Widget.M3.IconButton.Base">
        <item name="backgroundTint">?attr/colorSecondaryContainer</item>
        <item name="iconTint">?attr/colorOnSecondaryContainer</item>
        <item name="rippleColor">?attr/colorSecondaryContainer</item>
    </style>
    <style name="Widget.M3.IconButton.Tertiary" parent="Widget.M3.IconButton.Base">
        <item name="backgroundTint">?attr/colorTertiaryContainer</item>
        <item name="iconTint">?attr/colorOnTertiaryContainer</item>
        <item name="rippleColor">?attr/colorTertiaryContainer</item>
    </style>
    <style name="Widget.M3.IconButton.Error" parent="Widget.M3.IconButton.Base">
        <item name="backgroundTint">?attr/colorErrorContainer</item>
        <item name="iconTint">?attr/colorOnErrorContainer</item>
        <item name="rippleColor">?attr/colorErrorContainer</item>
    </style>

    <!-- Icon-only OUTLINED buttons (M3) -->
    <style name="Widget.M3.IconOutlined.Base" parent="Widget.Material3.Button.OutlinedButton">
        <!-- icon-only sizing + pill-ish shape -->
        <item name="android:minWidth">40dp</item>
        <item name="android:minHeight">40dp</item>
        <item name="iconPadding">0dp</item>
        <item name="android:text">@null</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.M3.IconOutlined.Pill</item>
        <item name="strokeWidth">1dp</item>
    </style>
    <style name="ShapeAppearance.M3.IconOutlined.Pill" parent="ShapeAppearance.Material3.Corner.None">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <!-- Sizes -->
    <style name="Widget.M3.IconOutlined.Small" parent="Widget.M3.IconOutlined.Base">
        <item name="android:minWidth">36dp</item>
        <item name="android:minHeight">36dp</item>
        <item name="iconSize">20dp</item>
    </style>
    <style name="Widget.M3.IconOutlined.Large" parent="Widget.M3.IconOutlined.Base">
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="iconSize">24dp</item>
    </style>

    <!-- Role variants (stroke + icon tint; text tint also follows) -->
    <style name="Widget.M3.IconOutlined.Primary" parent="Widget.M3.IconOutlined.Base">
        <item name="strokeColor">?attr/colorPrimary</item>
        <item name="iconTint">?attr/colorPrimary</item>
        <item name="rippleColor">?attr/colorPrimary</item>
    </style>
    <style name="Widget.M3.IconOutlined.Secondary" parent="Widget.M3.IconOutlined.Base">
        <item name="strokeColor">@color/green</item>
        <item name="iconTint">@color/green</item>
        <item name="rippleColor">@color/green</item>
    </style>
    <style name="Widget.M3.IconOutlined.Tertiary" parent="Widget.M3.IconOutlined.Base">
        <item name="strokeColor">?attr/colorTertiary</item>
        <item name="iconTint">?attr/colorTertiary</item>
        <item name="rippleColor">?attr/colorTertiary</item>
    </style>
    <style name="Widget.M3.IconOutlined.Error" parent="Widget.M3.IconOutlined.Base">
        <item name="strokeColor">?attr/colorError</item>
        <item name="iconTint">?attr/colorError</item>
        <item name="rippleColor">?attr/colorError</item>
    </style>
    <style name="ShapeAppearance.M3.RondaCard.Large" parent="ShapeAppearance.Material3.Corner.None">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>

    <style name="ShapeAppearance.Pill" parent="ShapeAppearance.Material3.Corner.None">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    <style name="ThemeOverlay.App.SearchTextFix" parent="">
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textColorHint">?attr/colorOnSurfaceVariant</item>
    </style>

</resources>
