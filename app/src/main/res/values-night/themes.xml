<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Mentoring" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- MantÃ©m as tuas cores; M3 aplica tonalidades de night automaticamente -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryContainer">@color/purple_200</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryContainer">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Sem Variant em M3 -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Texto -->
        <item name="android:textColorPrimary">@color/text_primary_dark</item>
        <item name="android:textColorSecondary">@color/text_secondary_dark</item>

        <item name="searchViewStyle">@style/Widget.Mentor.SearchView</item>
    </style>

    <!-- Se precisares de DatePicker overlay escuro em M3, usa ThemeOverlay.Material3 -->
    <style name="CustomDatePickerDialogTheme" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="android:textColorPrimary">#CCCCCC</item>
    </style>

    <style name="CustomAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="shapeAppearanceCornerExtraSmall">@style/ShapeAppearance.CustomDialog</item>
        <item name="materialAlertDialogTitleTextStyle">@style/CustomDialogTitleText.Dark</item>
        <item name="materialAlertDialogBodyTextStyle">@style/CustomDialogBodyText.Dark</item>
    </style>

    <style name="CustomDialogTitleText.Dark" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textColor">@color/text_primary_dark</item>
    </style>

    <style name="CustomDialogBodyText.Dark" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/text_secondary_dark</item>
    </style>

</resources>
