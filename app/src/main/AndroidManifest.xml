        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Mentoring"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name=".view.home.ui.notifications.NotificationsActivity"
            android:exported="false" />
        <activity
            android:name=".view.resource.ResourceActivity"
            android:exported="false" />
        <activity
            android:name=".view.session.SessionEAResourceActivity"
            android:exported="false" />
        <activity
            android:name=".view.session.SessionSummaryActivity"
            android:exported="false" />
        <activity
            android:name=".view.mentorship.ZeroMentorshipListActivity"
            android:exported="false" />
        <activity
            android:name=".view.session.SessionListActivity"
            android:exported="false" />
        <activity
            android:name=".view.ronda.CreateRondaActivity"
            android:exported="false" />
        <activity
            android:name=".view.ronda.RondaActivity"
            android:exported="false" />
        <activity
            android:name=".view.splash.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.login.LoginActivity"
            android:exported="true" />
        <activity
            android:name=".view.mentorship.MentorshipActivity"
            android:exported="false" />
        <activity
            android:name=".view.mentorship.CreateMentorshipActivity"
            android:exported="false" />
        <activity
            android:name=".view.tutored.CreateTutoredActivity"
            android:exported="false" />
        <activity
            android:name=".view.tutored.TutoredActivity"
            android:exported="false" />
        <activity
            android:name=".view.home.MainActivity"
            android:exported="true"
            android:label="@string/title_activity_main" />
        <activity
            android:name=".view.session.SessionActivity"
            android:exported="true" />
        <activity
            android:name=".view.session.SessionClosureActivity"
            android:exported="true" />
        <activity
            android:name=".view.form.ListFormActivity"
            android:exported="true" />
    </application>

</manifest>